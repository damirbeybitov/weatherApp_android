<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Title TextView for City Name -->
    <TextView
        android:id="@+id/textViewCityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Temperature -->
    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewCityName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Feels Like Temperature -->
    <TextView
        android:id="@+id/textViewFeelsLike"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feels Like"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewTemperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Minimum Temperature -->
    <TextView
        android:id="@+id/textViewTempMin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Min Temp"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewFeelsLike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Maximum Temperature -->
    <TextView
        android:id="@+id/textViewTempMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Max Temp"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewTempMin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Pressure -->
    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewTempMax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Humidity -->
    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewPressure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Weather Condition -->
    <TextView
        android:id="@+id/textViewCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewHumidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Visibility -->
    <TextView
        android:id="@+id/textViewVisibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Visibility"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewCondition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Wind Speed -->
    <TextView
        android:id="@+id/textViewWindSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wind Speed"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewVisibility"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Wind Direction -->
    <TextView
        android:id="@+id/textViewWindDirection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewWindSpeed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Wind Gust -->
    <TextView
        android:id="@+id/textViewWindGust"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gust"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/textViewWindDirection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
